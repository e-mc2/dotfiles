{
    "files.exclude": {
        ".*_cache": true,
        ".noseids": true,
        "**/__pycache__": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "workbench.colorTheme": "Nord",
    "workbench.editor.wrapTabs": true,
    "workbench.tree.enableStickyScroll": true,
    "explorer.autoReveal": "focusNoScroll",
    "search.mode": "newEditor",
    "editor.fontFamily": "JetBrains Mono",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.inlineSuggest.enabled": true,
    "editor.linkedEditing": true,
    "debug.toolBarLocation": "docked",
    "testing.defaultGutterClickAction": "contextMenu",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "terminal.external.osxExec": "Alacritty.app",

    // Python Settings
    "python.languageServer": "Jedi",

    "[python]": {
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ],
        "editor.formatOnType": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.wordBasedSuggestions": "off",
        "editor.rulers": [
            80,
            110
        ],
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
    },
    "black-formatter.args": [
        "--line-length=110",
        "--skip-string-normalization"
    ],
    "pylint.importStrategy": "fromEnvironment",
    // "pylint.path": ["${interpreter}", "-m", "pylint"],
    "pylint.args": [
        "--disable=C0111",
        "--rcfile=${workspaceFolder}/.pylintrc",
        // "--init-hook=import sys; sys.path.append('./')"
    ],

    // Go Settings
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],

    // Rust Settings
    "files.readonlyInclude": {
        "**/.cargo/registry/src/**/*.rs": true,
        "**/lib/rustlib/src/rust/library/**/*.rs": true,
    },

    // Experimental
    "multiDiffEditor.experimental.enabled": true,

    // Extensions Settings
    "redhat.telemetry.enabled": false,
    "code-eol.newlineCharacter": "Â¬",
    "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "cSpell.language": "en,ru",
    "github.copilot.editor.enableCodeActions": false,

    // Auto-generated Settings
    "git.confirmSync": false,
    "extensions.ignoreRecommendations": true,
    "editor.largeFileOptimizations": false,
    "explorer.confirmDragAndDrop": false,
    "notebook.lineNumbers": "on",
    "editor.accessibilitySupport": "off",
    "explorer.confirmDelete": false,
    "notebook.output.textLineLimit": 300,
    "notebook.output.scrolling": true,
    "workbench.activityBar.location": "hidden",
    "markdown.marp.enableHtml": true,
    "markdown.marp.pdf.noteAnnotations": true,
    "window.zoomLevel": 1,
    "go.toolsManagement.autoUpdate": true,
    "github.copilot.editor.enableAutoCompletions": true,
    "gitlab.duo.enabledWithoutGitlabProject": false,
    "gitlab.duoChat.enabled": false,
    "gitlab.duoCodeSuggestions.enabled": false,
    "gitlab.keybindingHints.enabled": false,
    "gitlab.duoCodeSuggestions.openTabsContext": false,
    "debug.disassemblyView.showSourceCode": false,
    "chat.experimental.statusIndicator.enabled": true,
}
